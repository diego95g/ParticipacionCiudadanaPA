<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ec.decc.espe.participacionciudadana.partido">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="91dp"
            android:layout_toEndOf="@+id/btnSave"
            android:layout_toRightOf="@+id/btnSave"
            android:text="Partido" />

        <EditText
            android:id="@+id/etRecinto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="61dp"
            android:layout_marginStart="61dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:hint="Nombre Partido"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etRecinto"
            android:layout_alignStart="@+id/etRecinto"
            android:layout_below="@+id/etRecinto"
            android:layout_marginTop="47dp"
            android:backgroundTint="@android:color/holo_orange_light"
            android:onClick="guardarPartido"
            android:text="Guardar" />

        <Button
            android:id="@+id/btnFind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnSave"
            android:layout_alignStart="@+id/btnSave"
            android:layout_below="@+id/btnSave"
            android:layout_marginTop="30dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:onClick="listaPartido"
            android:text="Lista Partidos" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnFind"
            android:layout_alignStart="@+id/btnFind"
            android:layout_below="@+id/btnFind"
            android:layout_marginTop="39dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:onClick="deletePartido"
            android:text="Borrar Registros" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/etRecinto"
            android:layout_alignEnd="@+id/etRecinto"
            android:layout_alignRight="@+id/etRecinto"
            android:layout_marginBottom="17dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@mipmap/espelogo" />
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>

