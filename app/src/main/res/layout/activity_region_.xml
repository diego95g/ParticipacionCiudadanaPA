<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ec.decc.espe.participacionciudadana.Region_">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="34dp"
            android:layout_toEndOf="@+id/btnSave"
            android:layout_toRightOf="@+id/btnSave"
            android:text="Region" />

        <EditText
            android:id="@+id/etRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:hint="Nombre Region"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etRegion"
            android:layout_alignStart="@+id/etRegion"
            android:layout_below="@+id/etRegion"
            android:layout_marginTop="42dp"
            android:onClick="guardar"
            android:text="Guardar" />

        <Button
            android:id="@+id/btnFind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnSave"
            android:layout_alignStart="@+id/btnSave"
            android:layout_below="@+id/btnSave"
            android:layout_marginTop="22dp"
            android:onClick="listaRegiones"
            android:text="Lista de Regiones" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btnFind"
            android:layout_alignRight="@+id/btnFind"
            android:layout_below="@+id/btnFind"
            android:layout_marginTop="37dp"
            android:onClick="delete"
            android:text="Borrar Registros" />
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
