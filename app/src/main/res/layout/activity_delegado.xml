<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ec.decc.espe.participacionciudadana.Delegado">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="INFORMACIÓN DELEGADO"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtCedula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView4"
                android:layout_alignRight="@+id/textView4"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="26dp"
                android:ems="10"
                android:hint="Ingrese su n° de Cedula"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtCedula"
                android:layout_alignStart="@+id/txtCedula"
                android:layout_below="@+id/txtCedula"
                android:layout_marginTop="13dp"
                android:ems="10"
                android:hint="Ingrese su Nombre"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtNombre"
                android:layout_alignStart="@+id/txtNombre"
                android:layout_below="@+id/txtNombre"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="Ingese su n° de Telefono"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtTipoDel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtTelefono"
                android:layout_alignStart="@+id/txtTelefono"
                android:layout_below="@+id/txtTelefono"
                android:layout_marginTop="14dp"
                android:ems="10"
                android:hint="Tipo Delegado"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtTipoDel"
                android:layout_alignStart="@+id/txtTipoDel"
                android:layout_below="@+id/txtTipoDel"
                android:layout_marginTop="10dp"
                android:onClick="guardar"
                android:text="GUARDAR" />

            <Button
                android:id="@+id/btnFind"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnSave"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:onClick="listaProvincias"
                android:text="LISTAR DELEGADOS" />

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btnFind"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/btnFind"
                android:layout_marginTop="10dp"
                android:onClick="delete"
                android:text="ELIMINAR REGISTROS" />
        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
